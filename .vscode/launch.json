{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Extension",
            "preLaunchTask": "npm: webpack",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"outFiles": [
				"${workspaceRoot}/dist/**/*.js"
			]
		},
		{
			"name": "Debug Server",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "Debug Build",
			// If you have changed target frameworks, make sure to update the program path.
			"program": "${workspaceFolder}/src/mobile-debug/bin/Debug/net7.0/mobile-debug.dll",
			"args": [ "--server", "--trace=response" ],
			"cwd": "${workspaceFolder}",
			// For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
			"console": "internalConsole",
			"stopAtEntry": false,
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Release Extension",
			"type": "extensionHost",
			"preLaunchTask": "npm: webpack",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"outFiles": [
				"${workspaceRoot}/dist/**/*.js"
			],
			"env": {
				"NODE_ENV": "production"
			}
		},
		{
			"name": "Release Server",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "Release Build",
			// If you have changed target frameworks, make sure to update the program path.
			"program": "${workspaceFolder}/src/mobile-debug/bin/Release/net7.0/mobile-debug.dll",
			"args": [ "--server", "--trace=response" ],
			"cwd": "${workspaceFolder}",
			// For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
			"console": "internalConsole",
			"stopAtEntry": false,
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Tests",
			"cwd": "${workspaceRoot}",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"tdd",
				"--timeout",
				"999999",
				"--colors",
				"./out/tests"
			],
			"runtimeArgs": [
				"--nolazy"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/out/tests/**/*.js"
			]
		}
	],
	"compounds": [
		{
			"name": "Debug Extension + Server",
			"configurations": [
				"Debug Extension",
				"Debug Server"
			]
		},
		{
			"name": "Release Extension + Server",
			"configurations": [
				"Release Extension",
				"Release Server"
			]
		},
	]
}